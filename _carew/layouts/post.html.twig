{% extends 'layouts/skeleton.html.twig' %}

{% block page_title %}
<h2>
    {% block post_title %}{{ carew.document.title }}{% endblock %}
    <span class="sub-title">{% block post_date %}{{ carew.document.metadatas.date|date('d/m/Y') }}{% endblock %}</span>
</h2>
{% endblock %}

{% block article_header %}
    <nav>
        {% block post_tags %}
        {% for tag in carew.document.tags %}
        <a class="button" href="{{ path('tags/'~tag) }}">{{ tag|title }}</a>
        {% endfor %}
        {% endblock %}
    </ul>
    <hr />
{% endblock %}

{% block article_footer %}
    <nav class="row">
        {% set previous = previous_document(carew.posts, carew.document) %}
        {% if previous %}
        <a class="six columns button" href="{{ render_document_path(previous) }}">Previous: {{ previous.title }}</a>
        {% endif %}

        {% set next = next_document(carew.posts, carew.document) %}
        {% if next %}
        <a class="six columns button" href="{{ render_document_path(next) }}">Next: {{ next.title }}</a>
        {% endif %}
    </nav>
{% endblock %}
